- content_for :title do
  = @title

- content_for :head do
  :javascript
    var app_root = "#{app_root}";
    var user = #{@user.to_json};
  %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
  %script{:type => 'text/javascript', :src => "#{app_root}/js/user_location.js"}

%h2
  %img{:src => "http://twiticon.herokuapp.com/#{@user.name}"}
  %span#user @#{@user.name}
%input{:value => 'Update Location', :type => :button, :name => :btn_update_location}
%h3 Location
%ul#location
  %li#lat
    lat :
    %span.val= @user.loc['lat']
  %li#lon
    lon :
    %span.val= @user.loc['lon']
%div#map